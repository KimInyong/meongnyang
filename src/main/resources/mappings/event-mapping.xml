<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="EventDAO">

    <update id="updateAllEventNstate">
        UPDATE EVENT
        SET
            EVENT_STATE = 'N'
        WHERE EVENT_STATE = 'Y'
    </update>

    <insert id="insertEvent" parameterType="event">
        INSERT INTO EVENT VALUES(EVENT_SEQ.NEXTVAL, #{rouletteSize}, #{eventImg}, 'Y')
    </insert>

    <select id="selectYstateEvent" parameterType="event" resultType="event">
        SELECT
            EVENT_TB_NO,
            ROULETTE_SIZE,
            EVENT_IMG,
            EVENT_STATE
        FROM EVENT
        WHERE EVENT_STATE = 'Y'
    </select>

    <select id="selectEventStartedCount" parameterType="event" resultType="int">
        SELECT
            COUNT(*)
        FROM EVENT
        WHERE EVENT_STATE = 'Y'
    </select>

</mapper>
